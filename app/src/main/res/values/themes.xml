<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Orgs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/russian_green</item>
        <item name="colorOnPrimary">@color/silver</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_munsell</item>
        <item name="colorSecondaryVariant">@color/orange_web</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/montserrat</item>
    </style>
</resources>